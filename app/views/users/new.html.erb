<h1>Register here!</h1>

<%= form_tag("/users") do %>
    <p>
        <%= label_tag "Username:" %>
        <%= text_field_tag "username" %>

        <%= label_tag "Email:" %>
        <%= text_field_tag "email" %>

        <%= label_tag "Password:" %>
        <%= password_field_tag "password" %>
    </p>

    <%= submit_tag "Register!" %>
<% end %>